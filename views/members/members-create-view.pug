extends ../layouts/common
block content
    link(rel="stylesheet", href="/stylesheets/members/members-create.css")
    .content
        if errors
            each error in errors
                .alert.alert-danger= error 
        form.form-group(action="/members/members-create" method="POST")
            label Member Information:
            .row
                input.form-control.mb-3(type="text"  name="name"    value=(values) ? values.name : '' placeholder="Full name (Example: Toàn đô la)" )
                input.form-control.mb-3(type="date"  name="dob"     value=(values) ? values.dob : '')
                input.form-control.mb-3(type="text"  name="phone"   value=(values) ? values.phone : ''   placeholder="Phone (Example: 0123123123)" )                                
                input.form-control.mb-3(type="email" name="email"   value=(values) ? values.email : ''  placeholder="Email (Example: abcxyz@gmail.com)" )
                input.form-control.mb-3(type="text"  name="facebook" placeholder="Facebook URL (Example: facebook.com/minton.2598)")
                select.custom-select(name="city")
                    option(value="Cần Thơ") Cần Thơ
                    option(value="Sài Gòn") Sài Gòn
                    option(value="Hà Nội") Hà Nội
                    option(value="Đà Nẵng") Đà Nẵng
                    option(value="Đà Lạt") Đà Lạt
            button.btn.btn-outline-dark.mt-2 Create